<div class="wrap">
  <h1>Posts#show</h1>
  <h1>投稿詳細ページ</h1>
  <h3>投稿者:<%= @post.user.email %></h3>
  <h3>内容:<%= @post.content %></h3>
  <h3>参加者: <%= @post.likes.count %>人</h3>
  <% if current_user.already_liked?(@post) %>
    <%= button_to '参加を取り消す', post_like_path(@post), method: :delete %>
  <% else %>
    <%= button_to '参加', post_likes_path(@post) %>
  <% end %>
  <h2>参加したユーザー</h2>
  <% @post.liked_users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>

  <%= link_to "ホームへ戻る", posts_path %>
</div>
